{
  "name": "react-native-localize",
  "version": "1.3.4",
  "license": "MIT",
  "description": "A toolbox for your React Native app localization.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/react-native-community/react-native-localize",
  "types": "index.d.ts",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-native-community/react-native-localize.git"
  },
  "keywords": [
    "react-native-localize",
    "react-native",
    "localize",
    "localization",
    "l20n"
  ],
  "scripts": {
    "prepare": "bob build",
    "format": "prettier '**/*.{js,json,md,ts,tsx}' --write",
    "typecheck": "flow ."
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "flow": true
        }
      ],
      "module"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md,ts,tsx}": "prettier --write"
  },
  "peerDependencies": {
    "react-native": ">=0.56.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@react-native-community/bob": "0.10.0",
    "@types/react": "16.9.23",
    "@types/react-native": "0.61.22",
    "flow-bin": "0.115.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-native": "0.61.5"
  }
}
